Derived from:
https://github.com/ginatrapani/todo.txt-cli/wiki/The-Todo.txt-Format


TASKFILE := [TASK]*


TASK := [(PRIO) ] [CREATIONDATE ] TASKDESCRIPTION


PRIO := [0-9]*


CREATIONDATE := YEAR-MONTH-DAY

YEAR := [0-9]4

MONTH := [0-9]2

DAY := [0-9]2


TASKDESCRIPTION := TASKSUMMARY CONTEXT PROJECT in any order

TASKSUMMARY := TEXT

CONTEXT := @[WORD]

PROJECT := +[WORD]
